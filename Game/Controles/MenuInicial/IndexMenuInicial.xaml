<Page x:Class="Game.Controles.MenuInicial.IndexMenuInicial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Controles.MenuInicial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexMenuInicial">

    <Grid>
        <StackPanel Orientation="Vertical"  VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Iniciar" Click="ComeçaJogo" />
            <Button Content="Atributos" Click="NavegaInfoJogador"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Width="50" Margin="0,0,10,0"  Name="inputName"/>
                <TextBox Width="50" Margin="0,0,10,0" Name="inputLife"/>
                <TextBox Width="50" Name="inputMana"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
