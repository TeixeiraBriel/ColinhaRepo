            <TextBlock Text="9" Grid.Column="9" Grid.Row="0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="10" Grid.Column="10" Grid.Row="0" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Linhas-->
        <TextBlock Text="A" Grid.Column="0" Grid.Row="1" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="B" Grid.Column="0" Grid.Row="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
