<Page x:Class="Game.Controles.TelaPadrao.Dialogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Controles.TelaPadrao"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1280"
      Title="Dialogo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Name="Esquerda" Grid.Row="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="10" Background="Beige" BorderThickness="5" FontWeight="Bold"/>
        <Label Name="Direita" Grid.Row="1"  HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="10" Background="Beige" BorderThickness="5" FontWeight="Bold"/>
        <Button Content="Proximo" Grid.Row="2" Click="ProximoDialogo"/>
    </Grid>
</Page>
